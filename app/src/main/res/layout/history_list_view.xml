<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/transaction_type_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_add_48"
            tools:layout_editor_absoluteX="46dp" />

        <TextView
            android:id="@+id/from_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/elicedigitalbaeum_regular"
            android:text="Default"
            android:textColor="@color/main"
            android:textSize="14dp"
            app:layout_constraintLeft_toRightOf="@+id/transaction_type_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/elicedigitalbaeum_regular"
            android:text="000,000,000"
            android:textColor="#9E9E9E"
            android:textSize="21dp"
            app:layout_constraintLeft_toRightOf="@id/transaction_type_image"
            app:layout_constraintTop_toBottomOf="@+id/from_text" />

        <TextView
            android:id="@+id/won_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/elicedigitalbaeum_regular"
            android:text="원"
            android:textColor="@color/main"
            android:textSize="21dp"
            app:layout_constraintLeft_toRightOf="@+id/value"
            app:layout_constraintTop_toBottomOf="@id/from_text" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:text="날짜(오류)"
            android:textSize="14dp"
            android:textColor="#9E9E9E"
            android:fontFamily="@font/elicedigitalbaeum_regular" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>